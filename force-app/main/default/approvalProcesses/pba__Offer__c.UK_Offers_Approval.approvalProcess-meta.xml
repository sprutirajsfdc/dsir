<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>ai@sothebysrealty.co.uk</name>
                <type>user</type>
            </approver>
            <approver>
                <name>cr@sothebysrealty.co.uk</name>
                <type>user</type>
            </approver>
            <approver>
                <name>su@sothebysrealty.co.uk</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>completion_date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Offer_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Offer_Approved_to_benny</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Status_to_Under_Offer</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Final_Rejection</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Offer_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approved_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Offer_submitted_for_Approval</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>UK Offers Approval</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>offer_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Recall_Status</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
