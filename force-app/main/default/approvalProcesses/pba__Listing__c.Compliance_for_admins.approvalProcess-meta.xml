<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>pba__Broker_s_Listing_ID__c</field>
        <field>Owner</field>
        <field>pba__ListingPrice_pb__c</field>
        <field>pba_uaefields__Community_Propertyfinder__c</field>
        <field>pba_uaefields__Sub_Community_Propertyfinder__c</field>
        <field>Documents_Verified__c</field>
        <field>Contact_Verified__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Status_Update_to_ContentCreation</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_QualityCheck_TimeStamp</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>UAE_Listings</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Compliance Check</label>
        <name>Compliance_Check</name>
    </approvalStep>
    <description>Listing Compliance must be approved by Listing Admins</description>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND
(
ISPICKVAL(pba__Status__c, &quot;Draft&quot;)
)</formula>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Listing_rejected_by_Listing_Admin</name>
            <type>Task</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Compliance_Timestamp</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_Update_to_Content_Creation</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Compliance for Admins</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Status_Update_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
