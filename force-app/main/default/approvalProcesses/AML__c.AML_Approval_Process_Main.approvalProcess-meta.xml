<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>AML_Type__c</field>
        <field>Status__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>AML_Status_is_KYC_Pending1</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>AML_Status_KYC_Pending_Email</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>UAE_AML_Queue</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>AML__c.Inquiry_Record_Type__c</field>
                <operation>notEqual</operation>
                <value>Exclusive Project</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>AML Not Exclusive</label>
        <name>AML_Not_Exclusive</name>
        <rejectionActions>
            <action>
                <name>AML_Status_On_Hold</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>AML_Status_On_Hold_Email</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>AML_Status_is_KYC_Approvedd</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>nis@luxhabitatsir.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>AML__c.AML_Severity__c</field>
                <operation>equals</operation>
                <value>Low Risk</value>
            </criteriaItems>
            <criteriaItems>
                <field>AML__c.Inquiry_Record_Type__c</field>
                <operation>equals</operation>
                <value>Exclusive Project</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>If Exclusive &amp;Low risk</label>
        <name>If_Exclusive_Low_risk</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>AML_Status_is_KYC_Rejectedd</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>AML_Status_is_KYC_Approved1</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>AML_Project_Queue</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>AML__c.AML_Severity__c</field>
                <operation>equals</operation>
                <value>High Risk,Medium Risk</value>
            </criteriaItems>
            <criteriaItems>
                <field>AML__c.Inquiry_Record_Type__c</field>
                <operation>equals</operation>
                <value>Exclusive Project</value>
            </criteriaItems>
        </entryCriteria>
        <label>If Exclusive &amp; High ,Medium risk.</label>
        <name>If_Exclusive_High_Medium_risk</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>AML_Status_is_KYC_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>When the AML Status Submitted then Approval Process starts</description>
    <emailTemplate>unfiled$public/AML_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>AML__c.Status__c</field>
            <operation>equals</operation>
            <value>Submitted</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>AML  Approval Process Main</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
