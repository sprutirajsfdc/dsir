    <description>Will send out emails immediately on creation or updation whenever the date is -
1) 2 days before 2) 1 month before 3) 3 months before 4) 6 months before  the
Contract end date</description>
    <environments>Default</environments>
    <formulas>
        <name>oneMonthBeforeEndDate</name>
        <dataType>Date</dataType>
        <expression>DATE(
    YEAR({!$Record.EndDate__c}), 
    MONTH({!$Record.EndDate__c}) - 1, 
    DAY({!$Record.EndDate__c})
)</expression>
    </formulas>
    <formulas>
        <name>sixMonthsBeforeEndDate</name>
        <dataType>Date</dataType>
        <expression>DATE(
    YEAR({!$Record.EndDate__c}), 
    MONTH({!$Record.EndDate__c}) - 6, 
    DAY({!$Record.EndDate__c})
)</expression>
    </formulas>
    <formulas>
        <name>threeMonthsBeforeEndDate</name>
