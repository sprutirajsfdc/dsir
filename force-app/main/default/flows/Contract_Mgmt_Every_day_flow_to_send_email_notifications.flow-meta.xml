    <description>Will run every day to send out mails if today is -
1) 2 days before 2) 1 month before 3) 3 months before 4) 6 months before the
Contract end date</description>
    <environments>Default</environments>
    <formulas>
        <name>oneMonthBeforeEndDate</name>
        <dataType>Date</dataType>
        <expression>ADDMONTHS({!$Record.EndDate__c} , - 1)</expression>
    </formulas>
    <formulas>
        <name>sixMonthsBeforeEndDate</name>
        <dataType>Date</dataType>
        <expression>ADDMONTHS({!$Record.EndDate__c} , - 6)</expression>
    </formulas>
    <formulas>
        <name>threeMonthsBeforeEndDate</name>
        <dataType>Date</dataType>
        <expression>ADDMONTHS({!$Record.EndDate__c} , - 3)</expression>
    </formulas>
    <formulas>
        <name>twoDaysBeforeEndDate</name>
        <dataType>Date</dataType>
        <expression>DATE(
    YEAR({!$Record.EndDate__c}), 
    MONTH({!$Record.EndDate__c}), 
    DAY({!$Record.EndDate__c} - 2)
)</expression>
    </formulas>
