    <description>Score will not calculated if status of AML = Kyc completed. Added record type</description>
    <environments>Default</environments>
    <formulas>
        <name>AMLSeverity1</name>
        <dataType>String</dataType>
        <expression>IF(ISPICKVAL({!$Record.AML_Type__c}, &apos;Corporate&apos;),
IF(
OR(
{!$Record.Customer_s_Country_of_Registration__r.FATF__c}=&quot;FATF HRC&quot;, 
AND(
{!$Record.Customer_s_Country_of_Registration__r.FATF__c} = &quot;FATF JUIM&quot;, 
NOT({!$Record.Customer_s_Country_of_Registration__r.Name} = &quot;United Arab Emirates&quot;)
),
{!$Record.Customer_s_Country_of_Registration__r.UAEIEC__c}=&quot;UN Sanctions&quot;, 
{!$Record.Beneficial_Owner_Country_of_Citizenship__r.UAEIEC__c}=&quot;UN Sanctions&quot;,
{!$Record.Industry__r.UAEIEC__c}=&quot;UN Sanctions&quot;
),&quot;High Risk&quot;,
	IF(
	OR(
	{!$Record.Screening_Shareholder__r.Name}=&quot;PEP identified&quot;,
	{!$Record.Screening_Shareholder__r.Name}=&quot;On relevant lists&quot;
	),&quot;High Risk&quot;,
		IF(
		{!$Record.Total_Weighted_Score_New__c}&gt;60,&quot;High Risk&quot;,
			IF(
			{!$Record.Total_Weighted_Score_New__c}&gt;30,&quot;Medium Risk&quot;,
				IF(
				{!$Record.Total_Weighted_Score_New__c}&lt;=30 &amp;&amp; {!$Record.Total_Weighted_Score_New__c} &gt; 0 ,&quot;Low Risk&quot;,&quot;&quot;))))),
IF(ISPICKVAL({!$Record.AML_Type__c}, &apos;Individual&apos;),				
IF(
OR(
{!$Record.Nationality__r.FATF__c} =&quot;FATF HRC&quot;, 
AND({!$Record.Nationality__r.FATF__c} = &quot;FATF JUIM&quot;, NOT({!$Record.Nationality__r.Name} = &quot;United Arab Emirates&quot;)),
{!$Record.Nationality__r.UAEIEC__c}=&quot;UN Sanctions&quot;, 
{!$Record.Country_Of_Birth__r.UAEIEC__c}=&quot;UN Sanctions&quot;,
{!$Record.Country_Of_Residence__r.UAEIEC__c}=&quot;UN Sanctions&quot;
),
&quot;High Risk&quot;,
    IF(
    OR(
    {!$Record.Screening_Shareholder__r.Name}=&quot;PEP identified&quot;,
    {!$Record.Screening_Shareholder__r.Name}=&quot;On relevant lists&quot;
    ),
    &quot;High Risk&quot;,
        IF(
        OR(
        {!$Record.Employment_Type__r.Name}=&quot;Unemployed&quot;
        ),
        &quot;High Risk&quot;,
            IF({!$Record.Total_Weighted_Score_New__c}&gt;60,&quot;High Risk&quot;,
                IF({!$Record.Total_Weighted_Score_New__c}&gt;30,&quot;Medium Risk&quot;,
                    IF({!$Record.Total_Weighted_Score_New__c}&lt;=30 &amp;&amp; {!$Record.Total_Weighted_Score_New__c} &gt; 0 ,&quot;Low Risk&quot;,&quot;&quot;)))))),
&quot;&quot;
)
)</expression>
    </formulas>
