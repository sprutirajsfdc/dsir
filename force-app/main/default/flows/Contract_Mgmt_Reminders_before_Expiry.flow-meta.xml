    <description>This flow will send out email notifications to users 1) 6 months 2) 3 months before the Contract End date of Contract Mgmt record.</description>
    <environments>Default</environments>
    <formulas>
        <name>onemonth</name>
        <dataType>Date</dataType>
        <expression>TODAY() - 30</expression>
    </formulas>
    <formulas>
        <name>oneMonthBeforeEndDate</name>
        <dataType>Date</dataType>
        <expression>DATE(
    YEAR({!$Record.EndDate__c}), 
    MONTH({!$Record.EndDate__c}) - 1, 
    DAY({!$Record.EndDate__c})
)</expression>
    </formulas>
    <formulas>
        <name>sixmonth</name>
        <dataType>Date</dataType>
        <expression>{!$Record.EndDate__c} -180</expression>
