<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Seller_Lead_Source_Should_not_be_Blank</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISPICKVAL( Status__c , &quot;Instructing&quot;),
    ISPICKVAL(Seller_LeadSource__c, &quot;&quot;)
)</errorConditionFormula>
    <errorMessage>Seller lead source should not be blank when the status marked as instructing.</errorMessage>
</ValidationRule>
