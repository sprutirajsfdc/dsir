<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Property_Sub_Type_should_not_be_blank</fullName>
    <active>true</active>
    <errorConditionFormula>AND(  ISPICKVAL(Property_Sub_Type__c, &apos;&apos;)  , ISPICKVAL( Status__c , &apos;Instructing&apos;))</errorConditionFormula>
    <errorDisplayField>Property_Sub_Type__c</errorDisplayField>
    <errorMessage>Please fill Property Sub type before marking the status as Instructing.</errorMessage>
</ValidationRule>
