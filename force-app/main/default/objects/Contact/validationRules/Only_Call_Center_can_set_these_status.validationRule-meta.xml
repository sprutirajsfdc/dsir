( 
(ISPICKVAL( Stage__c , &quot;Closing&quot;)), 
(ISPICKVAL( Stage__c , &quot;Expired&quot;)), 
(ISPICKVAL( Stage__c , &quot;Delete&quot;)), 
$UserRole.Id  = &quot;00E1t000001GLKQ&quot; 
)</errorConditionFormula>
