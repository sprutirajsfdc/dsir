<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>For_Type_Agent_Company_Is_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND 
(  ISNEW() ,ISPICKVAL(ContactType__c,&apos;Agent&apos;),
ISBLANK(pba__CompanyName__c), Account.Name = &apos;.&apos;)</errorConditionFormula>
    <errorMessage>If contact Type is 3rd Party Agent then Company is Mandatory &amp; If no company available then choose the Contact Type = 3rd Party Agency</errorMessage>
</ValidationRule>
