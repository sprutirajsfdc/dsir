<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Completion_Date_Is_Mandatory</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
  ISPICKVAL( Status__c , &quot;Completed&quot;),
  ISBLANK( Completion_Date__c )
)</errorConditionFormula>
    <errorDisplayField>Completion_Date__c</errorDisplayField>
    <errorMessage>If Contract Status is Completed then Completion Date is mandatory</errorMessage>
</ValidationRule>
