<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Convenyance_Status_is_closed</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  ISPICKVAL(Status__c, &quot;Closed&quot;),
  (RecordType.Name != &quot;UK&quot;),
   OR(
    NOT(ISPICKVAL(KYC_Received__c, &quot;Yes&quot;)),
    NOT(ISPICKVAL(Source_of_fund_Received__c, &quot;Yes&quot;))
   )
)</errorConditionFormula>
    <errorMessage>IF Conveyance  Status is Closed then KYC Received ? and Source of fund Received ?  both should be YES.</errorMessage>
</ValidationRule>
