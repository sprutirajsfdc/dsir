<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>UK_Approved_Status_Lock</fullName>
    <active>false</active>
    <description>Once Approved then No one can Change Status to anything else.</description>
    <errorConditionFormula>AND(
    ISPICKVAL(PRIORVALUE(Status__c), &apos;Approved&apos;),
    RecordType.Name = &apos;UK&apos;,
    ISCHANGED(Status__c)
)</errorConditionFormula>
    <errorMessage>Once Approved then Can not change Status</errorMessage>
</ValidationRule>
