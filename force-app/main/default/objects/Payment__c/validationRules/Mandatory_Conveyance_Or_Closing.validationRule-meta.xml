<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Mandatory_Conveyance_Or_Closing</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISBLANK( Conveyance__c ) , ISBLANK( Closing__c ) )</errorConditionFormula>
    <errorMessage>Either Conveyance OR Closing is  mandatory in Payment.</errorMessage>
</ValidationRule>
