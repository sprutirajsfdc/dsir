<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Mobile_number_should_be_number_only</fullName>
    <active>true</active>
    <description>Mobile number contains number,+,- only</description>
    <errorConditionFormula>AND( 
NOT(ISBLANK(Mobile__c  )),
NOT(REGEX(Mobile__c  , &quot;^(?=.*?[1-9])[0-9\\-\\+]+$&quot;))
)</errorConditionFormula>
    <errorDisplayField>Mobile__c</errorDisplayField>
    <errorMessage>Mobile number format incorrect.</errorMessage>
</ValidationRule>
